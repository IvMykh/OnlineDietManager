@model IEnumerable<OnlineDietManager.Domain.DishesManagement.Dish>
@using OnlineDietManager.Domain.UsersManagement

@{
    ViewBag.Title = "All general Dishes";
}

<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>

@if (User.IsInRole(AppRole.RoleTypeToString(AppRole.RoleType.Admin))) 
{
    <p>
    @Html.ActionLink(
        linkText: "Create New",
        actionName: "Create",
        routeValues: new { returnUrl = Request.Url },
        htmlAttributes: new { @class = "btn btn-primary" }
        )
    </p>
}

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
                @if (User.IsInRole(AppRole.RoleTypeToString(AppRole.RoleType.Admin))) {                
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.ID, returnUrl = Request.Url })</td>
                }
                else
                {
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                }
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="row">
                @using (@Html.BeginForm("AddToPersonal", "GeneralDishes",
                    FormMethod.Post,
                    new { @class = "col-xs-2" }))
                {
                    @Html.Hidden("ID", item.ID)
                    @Html.Hidden("returnUrl", Request.Url)

                    @*<input type="submit" class="btn btn-default btn-xs" value="Delete" />*@
                    <button type="submit" class="btn btn-info btn-sm">
                        <div class="glyphicon glyphicon-star"></div>
                    </button>
                }

                @if (User.IsInRole(AppRole.RoleTypeToString(AppRole.RoleType.Admin)))
                {
                    using (@Html.BeginForm("Delete", "GeneralDishes",
                        FormMethod.Post,
                        new { @class = "col-xs-2" }))
                    {
                        @Html.Hidden("ID", item.ID)
                        @Html.Hidden("returnUrl", Request.Url)

                        @*<input type="submit" class="btn btn-default btn-xs" value="Delete" />*@
                        <button type="submit" class="btn btn-danger btn-sm">
                            <div class="glyphicon glyphicon-remove"></div>
                        </button>
                    }
                }
            </td>
        </tr>
    }

</table>
