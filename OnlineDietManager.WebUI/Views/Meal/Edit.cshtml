<div class="row panel">
    <div class="col-xs-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Meal.ID)
                @Html.HiddenFor(model => model.Meal.Day_ID)

                @Html.HiddenFor(model => model.ReturnUrl)

                <div class="form-group">
                    @Html.LabelFor(model => model.Meal.Description, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Meal.Description)
                        @Html.ValidationMessageFor(model => model.Meal.Description)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Meal.Time, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Meal.Time)
                        @Html.ValidationMessageFor(model => model.Meal.Time)
                    </div>
                </div>

                @Html.Partial("_SaveCancelPartial", Model.ReturnUrl)
            </div>
        }
    </div>
    
</div>

<div class="row panel">
    <div class="col-xs-2">
        <div class="panel-default">
            <div class="panel-heading text-centrified"><p class="panelHeading">Dishes in Catalog</p></div>
            <div class="panel-body">
                @foreach (var d in Model.AllDishes)
                {
                    using (Html.BeginForm("Edit", "Meal"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.Hidden("Meal", Model.Meal)
                        @Html.Hidden("MealId", Model.MealId)
                        @Html.Hidden("DayId", Model.DayId)

                        @Html.Hidden("AllDishes", Model.AllDishes)
                        @Html.Hidden("ReturnUrl", Model.ReturnUrl)

                        @Html.Hidden("SelectedDishId", d.ID)

                        <button type="submit" class="btn btn-link btn-group-justified">
                            @d.Name
                        </button>
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-xs-9">
        <div class="panel panel-default">
            <div class="panel-heading text-centrified"><p class="panelHeading">Dishes in meal</p></div>
            <div class="panel-body">
                <table class="table table-striped table-condensed table-bordered">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>

                    @foreach (var item in Model.Meal.Dishes)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                delete
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>