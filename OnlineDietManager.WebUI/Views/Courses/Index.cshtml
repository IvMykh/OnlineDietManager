@model IEnumerable<OnlineDietManager.Domain.CoursesManagement.Course>

@{
    ViewBag.Title = "All my Courses";
}

<div class="panel-heading">
    <h3>@ViewBag.Title</h3>
</div>

<p>
    @Html.ActionLink(
        linkText:   "Create New",
        actionName: "Create",
        routeValues: new { returnUrl = Request.Url },
        htmlAttributes: new { @class = "btn btn-primary" }
        )
</p>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.ID)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-xs-1">
                @Html.ActionLink(item.ID.ToString(), "Edit", new { item.ID, returnUrl = Request.Url })
            </td>
            <td class="col-xs-5">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="row">
                @using (@Html.BeginForm("Launch", "ActiveCourses",
                    FormMethod.Post,
                    new { @class = "col-xs-1" }))
                {
                    @Html.Hidden("idToLaunch", item.ID)
                    @Html.Hidden("returnUrl", Request.Url)

                    @*<input type="submit" class="btn btn-default btn-xs" value="Delete" />*@
                    <button type="submit" class="btn btn-info btn-sm">
                        <div class="glyphicon glyphicon-bell"></div>
                    </button>
                }

                @using (@Html.BeginForm("Delete", "Courses",
                    FormMethod.Post,
                    new { @class = "col-xs-1" }))
                {
                    @Html.Hidden("ID", item.ID)
                    @Html.Hidden("returnUrl", Request.Url)

                    @*<input type="submit" class="btn btn-default btn-xs" value="Delete" />*@
                    <button type="submit" class="btn btn-danger btn-sm">
                        <div class="glyphicon glyphicon-remove"></div>
                    </button>
                }
            </td>

        </tr>
    }

</table>
